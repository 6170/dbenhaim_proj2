<% if user_signed_in? %>
<div class="container">
  <div id="sell" class="hide">
    <div class="row">
      <div class="span9">
        <h1>Your Current Shop Inventory</h1>
      </div>
      <div class="span3">
        <a href="#newItemModal" role="button" class="btn" data-toggle="modal">Sell a new item</a>
      </div>
    </div>
    <div class="row shopItems">
    </div>
    <div class="modal hide fade" id="newItemModal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Add New item</h3>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" id="new-item-form">
          <fieldset>
            <div id="legend" class="">
              <legend class="">Add a New Item</legend>
            </div>
            <div class="control-group">
              <!-- Text input-->
              <label class="control-label" for="input01">Title</label>
              <div class="controls">
                <input type="text" placeholder="item title" name="title" class="input-xlarge">
                <p class="help-block">What are you selling?</p>
              </div>
            </div>
            <div class="control-group">
              <!-- Text input-->
              <label class="control-label" for="input01">Price</label>
              <div class="controls">
                <input type="text" placeholder="$0.00" name="price" class="input-xlarge">
                <p class="help-block">How much do you want?</p>
              </div>
            </div>
            <div class="control-group">
              <!-- Text input-->
              <label class="control-label" for="input01">Image Url</label>
              <div class="controls">
                <input type="text" placeholder="www.google.com" name="img_url" class="input-xlarge">
                <p class="help-block">Where can we find an image of it?</p>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary" id="save-new-item">Save Item</button>
      </div>
    </div>
  </div>
  <div id="buy" class="hide">
    <h1>What do you want to buy?</h1>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>State</th>
          <th>Date Listed</th>
          <th>Image</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="itemlist">
      </tbody>
    </table>
  </div>
  <div id="orders" class="hide">
    <div class="row">
      <div class="span9">
        <h1>Your Orders</h1>
      </div>
      <div class="span3">
        <a href="#" role="button" class="btn" id="new-order" data-toggle="modal">Start a new Order</a>
      </div>
    </div>
    <div class="row orders">
    </div>
  </div>
</div>
<% end %>
<script type="text/javascript">
$("a[rel=tooltip]").tooltip();
$("a[rel=popover]").popover({trigger:'hover'});
</script>
</div><!--/.fluid-container-->