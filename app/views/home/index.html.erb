<% if user_signed_in? %>
<div class="container">
  <div id="sell" class="hide">
    <div class="row">
      <div class="span9">
        <h1>Your Current Shop Inventory</h1>
      </div>
      <div class="span3">
        <a href="#newItemModal" role="button" class="btn" data-toggle="modal">Sell a new item</a>
      </div>
    </div>
    <div class="row">
      <% @current_user.items.each do |item| %>
      <div class="accordion" id="accordion-item-<%= item.id %>">
        <div class="accordion-group">
          <button class="btn btn-danger pull-right remove-item" data-item-id="<%= item.id %>"><icon class="icon-remove-circle"></icon></button>
          <div class="accordion-heading">
            <h1>
              <a class="accordion-toggle collapsed in" rel="tooltip" data-placement="left" data-original-title="Click to expand" data-toggle="collapse" data-parent="#accordion-item-<% item.id %>" href="#collapse<%= item.id %>"><%= item.title %></a>
            </h1>
          </div>
          <div class="accordion-body collapse" id="collapse<%= item.id %>">
            <div class="accordion-inner">
              <table class="table table-striped table-bordered table-hover">
                <tr>
                  <th>Title</th>
                  <th>Price</th>
                  <th>State</th>
                  <th>Date Listed</th>
                  <th>Image</th>
                </tr>
                <tr>
                  <td><%= item.title %></td>
                  <td><%= item.price %></td>
                  <td><%= item.state %></td>
                  <td><%= item.posted_on %></td>
                  <td><a href="#" rel="popover" data-content="<img src=&quot;<%= item.img_src %>&quot; />" data-original-title="<%= item.title %>">Image</a></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div id="buy">
    <h1>What do you want to buy?</h1>
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>State</th>
        <th>Date Listed</th>
        <th>Image</th>
        <th></th>
      </tr>
      <% @items.each do |item| %>
      <% if item.state != "In Cart" %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.price %></td>
        <td><%= item.state %></td>
        <td><%= item.posted_on %></td>
        <td><a href="#" rel="popover" data-content="<img src=&quot;<%= item.img_src %>&quot; />" data-original-title="<%= item.title %>">Image</a></td>
        <td><button id="<%= item.id %>" class="add_to_cart">Add to cart!</button></td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
<% end %>
<div class="modal hide fade" id="newItemModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Add New item</h3>
  </div>
  <div class="modal-body">
    <form class="form-horizontal" id="new-item-form">
      <fieldset>
        <div id="legend" class="">
          <legend class="">Add a New Item</legend>
        </div>
        <div class="control-group">
          <!-- Text input-->
          <label class="control-label" for="input01">Title</label>
          <div class="controls">
            <input type="text" placeholder="item title" name="title" class="input-xlarge">
            <p class="help-block">What are you selling?</p>
          </div>
        </div>
        <div class="control-group">
          <!-- Text input-->
          <label class="control-label" for="input01">Price</label>
          <div class="controls">
            <input type="text" placeholder="$0.00" name="price" class="input-xlarge">
            <p class="help-block">How much do you want?</p>
          </div>
        </div>
        <div class="control-group">
          <!-- Text input-->
          <label class="control-label" for="input01">Image Url</label>
          <div class="controls">
            <input type="text" placeholder="www.google.com" name="img_url" class="input-xlarge">
            <p class="help-block">Where can we find an image of it?</p>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" id="add-item">Save Item</button>
  </div>
</div>
<script type="text/javascript">
$("a[rel=tooltip]").tooltip();
$("a[rel=popover]").popover({trigger:'hover'});
</script>
</div><!--/.fluid-container-->